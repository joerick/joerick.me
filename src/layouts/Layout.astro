---
import { SEO } from "astro-seo";
import MugshotImage from "../assets/mug.jpg";

export interface Props {
	title: string;
    content?: {
        title?: string;
        description?: string;
        image?: string;
        imageAlt?: string;
    }
}

let { title, content } = Astro.props as Props;
let openGraph = undefined
if (!content) {
    content = {
        title: title ?? "joerick.me",
        description: "",
        image: MugshotImage,
    }
}
openGraph = {
    basic: {
        title,
        type: "website",
        image: content.image || MugshotImage,
    },
    optional: {
        description: content.description,
    },
    image: {
        alt: content.imageAlt ?? title,
    }
};
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <SEO title={title} description={content?.description} image={content?.image} openGraph={openGraph} />
	</head>
	<body>
      <div class="theme-container">
        <div class="bg"></div>
        <div class="theme-content">
          <slot />
        </div>
      </div>
	</body>
</html>

<style is:global lang="scss">
@import '../assets/chicago-webfont/stylesheet.css';

